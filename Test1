<body>
  <div id="dot"></div>
  <div id="status">Calibrating... Focus on the red dot</div>

  <div id="inputSection">
    <p>Type the numbers you saw:</p>
    <input type="text" id="userInput">
    <div>
      <button id="checkBtn">Check</button>
      <button id="restartBtn">Restart</button>
    </div>
  </div>

  <script>
    let lastGaze = null;
    let offTargetCount = 0;
    let alerted = false;
    let lastAlertTime = 0;
    let numberSequence = [];
    let calibrated = false;
    let gazeActive = false;

    const thresholdFrames = 7;
    const tolerance = 0.2;
    const alertCooldown = 5000;

    const status = document.getElementById("status");
    const dot = document.getElementById("dot");
    const inputSection = document.getElementById("inputSection");
    const checkBtn = document.getElementById("checkBtn");
    const restartBtn = document.getElementById("restartBtn");

    function isLookingCenter(x, y) {
      return x > 0.5 - tolerance && x < 0.5 + tolerance &&
             y > 0.5 - tolerance && y < 0.5 + tolerance;
    }

    function checkGazeStatus() {
      if (!gazeActive || !lastGaze || !calibrated) return;

      const [x, y] = lastGaze;
      if (isLookingCenter(x, y)) {
        if (alerted) status.textContent = "✅ Focused on dot.";
        offTargetCount = 0;
        alerted = false;
      } else {
        offTargetCount++;
        const now = Date.now();
        if (!alerted && offTargetCount >= thresholdFrames && now - lastAlertTime > alertCooldown) {
          alerted = true;
          lastAlertTime = now;
          status.textContent = "⚠ You're not looking at the red dot!";
          alert("⚠ You're not looking at the red dot! Please focus during the test.");
        }
      }
    }

    function showSequence() {
      gazeActive = true;
      numberSequence = Array.from({ length: 5 }, () => Math.floor(Math.random() * 90 + 10));
      numberSequence.forEach((num, i) => {
        const div = document.createElement("div");
        div.className = "number";
        div.textContent = num;
        const angle = (i / numberSequence.length) * Math.PI * 2;
        const radius = 200;
        div.style.left = `${window.innerWidth / 2 + Math.cos(angle) * radius}px`;
        div.style.top = `${window.innerHeight / 2 + Math.sin(angle) * radius}px`;
        document.body.appendChild(div);
        setTimeout(() => div.remove(), 10000); // ← show for 10s
      });

      setTimeout(() => {
        inputSection.style.display = "block";
        status.textContent = "Now type the numbers you saw.";
        gazeActive = false;
      }, 10000); // ← wait 10s before showing input
    }

    checkBtn.onclick = () => {
      const input = document.getElementById("userInput").value.trim().split(/\s+/);
      const correct = numberSequence.map(String);
      if (JSON.stringify(input) === JSON.stringify(correct)) {
        alert("✅ Correct!");
      } else {
        alert("❌ Incorrect!\nCorrect answer was: " + correct.join(" "));
      }
    };

    restartBtn.onclick = () => location.reload();

    webgazer.setGazeListener((data, timestamp) => {
      if (data) {
        lastGaze = [data.x / window.innerWidth, data.y / window.innerHeight];
      }
    }).begin();

    webgazer.showVideo(true)
            .showFaceOverlay(true)
            .showFaceFeedbackBox(false)
            .showPredictionPoints(false);

    // Start test after calibration
    setTimeout(() => {
      status.textContent = "✅ Calibration complete. Get ready...";
      calibrated = true;
      setTimeout(() => {
        status.textContent = "Test starting... Focus on the red dot.";
        showSequence();
      }, 2000);
    }, 5000);

    setInterval(checkGazeStatus, 300);
  </script>
</body>
</html>